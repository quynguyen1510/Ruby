<% provide(:title, 'Index')%>
<div class="container">
  <h1>List users</h1>           
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <% if current_user.admin? %>
        <th>Delete</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <% if !user.admin? %>
        <td class="btn btn-danger">
          <%= link_to "delete", user, method: :delete, confirm: "Are you sure?"%>
        </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>