<% provide(:title, 'Index')%>
<div class="container">
  <h1>List users</h1>           
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <% if !user.admin? %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td class="btn btn-danger">
            <%= link_to "Delete", user, method: :delete, confirm: "Are you sure?",id: "delete_button" %>
          </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>