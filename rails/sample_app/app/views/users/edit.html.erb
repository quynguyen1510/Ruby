<% provide(:title,'Edit')%>
<h1 class="text-center">Edit your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url:user_path(current_user) ) do |f| %>
      <%= render 'message/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Update", class: "btn btn-primary" ,id: "submit_button" %>
      <%= link_to "Cancel", current_user, class: "btn btn-primary", id:"cancle_button"%>
    <% end %>
    
  </div>
</div>