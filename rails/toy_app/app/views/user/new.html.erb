<h1>This is new page</h1>
<div class="row">
  <div class="col-lg-offset-2">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, "Email", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="col-lg-offset-4">
          <%= f.submit "Register", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>